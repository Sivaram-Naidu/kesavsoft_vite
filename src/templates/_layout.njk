{# FILENAME: src/templates/_layout.njk #}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    {# The pageTitle is passed from the vite.config.js #}
    <title>KeshavSoft - {{ pageTitle }}</title>
    
    <!-- Bootstrap CSS CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" xintegrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <!-- Bootstrap Icons CDN -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    
    <!-- This script imports our CSS file -->
    <script type="module" src="/src/main.js"></script>
</head>
<body class="d-flex flex-column min-vh-100 bg-light">

    {# Include the navbar partial #}
    {% include "src/templates/partials/_navbar.njk" %}

    {# This block will be filled by index.html, about.html, or contact.html #}
    {% block content %}{% endblock %}

    {# Include the footer partial #}
    {% include "src/templates/partials/_footer.njk" %}

    <!-- Bootstrap JS Bundle CDN -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" xintegrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>